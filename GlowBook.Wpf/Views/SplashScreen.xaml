<Window x:Class="GlowBook.Wpf.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="520" Height="340" WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="CenterScreen">
    <Border Background="{StaticResource BabyPink}" CornerRadius="24" Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="📖" FontFamily="Segoe UI Emoji" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                <TextBlock Text="GlowBook" Style="{StaticResource H1}" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                <TextBlock Text="Salon Planner" Foreground="{StaticResource White70}" HorizontalAlignment="Center"/>
            </StackPanel>
            <ProgressBar Grid.Row="1" Height="10" IsIndeterminate="True"
                         Margin="40,24,40,8" Foreground="#FFFFFFFF" Background="#33FFFFFF"/>
            <TextBlock Grid.Row="2" Text="Laden…" Foreground="{StaticResource White70}"
                       HorizontalAlignment="Center" Margin="0,0,0,6"/>
        </Grid>
    </Border>
        
</Window>
