<Page x:Class="GlowBook.Wpf.Views.Pages.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:GlowBook.Wpf.ViewModels">
    

    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Nieuw"   Margin="0,0,8,0" Command="{Binding AddCommand}"/>
            <Button Content="Opslaan" Margin="0,0,8,0" Command="{Binding SaveCommand}"/>
            <Button Content="Verwijderen"              Command="{Binding DeleteCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedService, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,8,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam"       Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                <DataGridTextColumn Header="Duur (min)" Binding="{Binding DurationMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                <DataGridTextColumn Header="Prijs"      Binding="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.00}}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
