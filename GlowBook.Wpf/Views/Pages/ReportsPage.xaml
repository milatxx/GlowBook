<Page x:Class="GlowBook.Wpf.Views.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:GlowBook.Wpf.ViewModels">
    <Page.DataContext>
    <vm:ReportsViewModel/>
    </Page.DataContext>


    <Grid Margin="24">
        <Border Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Rapportage" Style="{StaticResource CardTitle}" Margin="0,0,0,8"/>

                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Van:" Foreground="#FFEC628B" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <DatePicker x:Name="dpFrom" SelectedDate="{Binding From}" Margin="0,0,16,0"/>
                    <TextBlock Text="Tot:" Foreground="#FFEC628B" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <DatePicker x:Name="dpTo" SelectedDate="{Binding To}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Exporteer CSV" Click="Csv_Click" Margin="0,0,8,0"/>
                    <Button Content="Exporteer PDF" Click="Pdf_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
    </Grid>
</Page>
