<Page x:Class="GlowBook.Wpf.Views.Pages.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:vm="clr-namespace:GlowBook.Wpf.ViewModels">
    <Page.DataContext>
    <vm:CustomersViewModel/>
    </Page.DataContext>
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Nieuw"       Margin="0,0,8,0" Click="New_Click"/>
            <Button Content="Opslaan"     Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="Verwijderen"                  Click="Delete_Click"/>
        </StackPanel>

        <DataGrid x:Name="Grid"
                  ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,8,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam"     Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                <DataGridTextColumn Header="Telefoon" Binding="{Binding Phone}"   Width="150"/>
                <DataGridTextColumn Header="Email"    Binding="{Binding Email}"   Width="220"/>
                <DataGridTextColumn Header="Notities" Binding="{Binding Notes}"   Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
