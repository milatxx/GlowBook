<Page x:Class="GlowBook.Wpf.Views.Pages.StaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:GlowBook.Wpf.ViewModels">
    <Page.DataContext>
        <vm:StaffViewModel/>
    </Page.DataContext>

    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Nieuw"   Margin="0,0,8,0" Click="New_Click"/>
            <Button Content="Opslaan" Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="Verwijderen"           Click="Delete_Click"/>
        </StackPanel>

        <DataGrid x:Name="Grid" ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,8,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam" Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                <DataGridTextColumn Header="Rol"  Binding="{Binding Role}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
