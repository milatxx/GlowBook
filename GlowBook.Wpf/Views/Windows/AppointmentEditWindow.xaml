<Window x:Class="GlowBook.Wpf.Views.Windows.AppointmentEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Afspraak wijzigen" Height="420" Width="520" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Afspraak" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Klant" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <ComboBox  x:Name="CmbCustomer" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"
                       DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Medewerker" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <ComboBox  x:Name="CmbStaff" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                       DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Dienst" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <ComboBox  x:Name="CmbService" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"
                       DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Datum" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <DatePicker x:Name="DpDate" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Start" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="TxtStart" Width="80" Text="09:00" Margin="0,0,16,0"/>
                <TextBlock Text="Duur (min)" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="TxtDuration" Width="80" Text="60"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuleren" Width="100" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Bewaren"   Width="100" IsDefault="True" Click="Save_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
